// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tipo {
  id Int @id @default(autoincrement())
  name String @unique
  tipoIngresos Ingreso[]
  tipoEgresos Egreso[]
}

model Ingreso {
  id Int @id @default(autoincrement())
  name String @unique
  tipo Tipo @relation(fields: [tipoId], references: [id])
  tipoId Int
}

model Egreso {
  id Int @id @default(autoincrement())
  name String @unique
  tipo Tipo @relation(fields: [tipoId], references: [id])
  tipoId Int
}