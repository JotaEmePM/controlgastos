// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tipo {
  id Int @id @default(autoincrement())
  name String @unique
  factor String @default("")
  tipoCategoria Categoria[]
}

model Categoria {
  id Int @id @default(autoincrement())
  name String
  tipo Tipo @relation(fields: [tipoId], references: [id])
  tipoId Int

  registros Registro[]
  presupuesto Presupuesto[]
}

model OrigenDestino {
  id Int @id @default(autoincrement())
  name String

  origen Registro[] @relation(name: "origen")
  destino Registro[] @relation(name: "destino")
}

model Presupuesto {
  id Int @id @default(autoincrement())
  periodo Int
  categoriaId Int
  categoria Categoria @relation(fields: [categoriaId], references: [id])
  monto Int
}

model Registro {
  id Int @id @default(autoincrement())
  fecha DateTime @default(now())
  categoriaId Int
  categoria Categoria @relation(fields: [categoriaId], references: [id])
  concepto String
  monto Int
  necesario Int
  visible Boolean
  origenId Int
  origen OrigenDestino @relation(name: "origen", fields: [origenId], references: [id])
  destinoId Int
  destino OrigenDestino @relation(name: "destino", fields: [destinoId], references: [id])
}